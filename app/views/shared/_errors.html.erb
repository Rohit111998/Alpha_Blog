<% if obj.errors.any? %>
    <div class="row">
            <div class="card card-body bg-danger text-white col-md-6 offset-md-2">
                    <h3 class="card-title">
                        <%= pluralize(obj.errors.count, "error") %>
                        occured:
                    </h2>
                    <div class="panel-body">
                        <ul class="listing">
                            <% obj.errors.full_messages.each do |msg| %>
                                <li><%= msg %></li>
                            <% end %>
                        </ul>
                    </div>
            </div>
        </div>
<% end %>