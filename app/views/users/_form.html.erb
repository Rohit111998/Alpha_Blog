<%= render 'shared/errors', obj: @user %>

<div class='form-group row'>
    <div class='col-sm-12'>
        <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class="form-group">
                <div class="col-sm-2 col-form-label">
                    <b><%= f.label :username %></b>
                </div>
                <div class="col-sm-10">
                    <%= f.text_field :username, class:"form-control", placeholder: "Enter username", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-2 col-form-label">
                    <b><%= f.label :email %></b>
                </div>
                <div class="col-sm-10">
                    <%= f.text_field :email, class:"form-control", placeholder: "Enter email", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-2 col-form-label">
                    <b><%= f.label :password %></b>
                </div>
                <div class="col-sm-10">
                    <%= f.password_field :password, class:"form-control", placeholder: "Enter password", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit(@user.new_record? ? "Sign up" : "Update your account", class: "btn btn-primary btn-lg") %>
                </div>
            </div>
        <% end %>
    </div>
</div>