<h1 align="center"><font face="Times New Roman"><b>All Rails Bloggers</b></font></h1><br>
<div align="center">
    <div class="container pagination justify-content-center">
        <%= will_paginate %>
    </div>
    <% @users.each do |user| %>
        <ul class="listing">
            <div class="row">
                <div class="card card-body bg-light col-md-6 offset-md-2">
                    <li><%= link_to gravatar_for(user), user_path(user) %></li>
                    <li class="article-title">
                        <%= link_to user.username, user_path(user) %>
                    </li>
                    <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
                    <% if logged_in? and current_user.admin? %>
                        <li><%= link_to "Delete this user", user_path(user), method: :delete,
                            data: {confirm: "Are you sure you want to delete this user and all their articles?"} %></li>
                    <% end %>
                </div>
            </div>
        </ul>
    <% end %>
    <div class="container pagination justify-content-center">
        <%= will_paginate %>
    </div>
</div>